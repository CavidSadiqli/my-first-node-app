<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/products.css">
</head>


<body>

    <%- include('../includes/navigation.ejs') %>
    
    <main>
        <section class="products-section">
            <% if (Card.products.length > 0) { %>
                <div class="products-title">
                    <h1>My Products</h1>
                </div>
    
                <div class="products-div">
                    <% for(product of Card.products){ %>
                        <div class="product-card">
                            <div class="product-title">
                                <h1 class="product_title"><%= product.title %> (<%= product.amount %>) </h1>
                            </div>
                            <div class="product__img">
                                <div class="product-img">
                                    <img src="<%= product.image_link %>" alt="product" class="product_img">
                                </div>
                            </div>
                            <div class="product-text">
                                <p class="product_text"><%= product.description %></p>
                            </div>
                            <form class="product-button" method="post" action="/card/delete-product">
                                <input type="hidden" name="productId", value="<%= product.id %>">
                                <a href="/products/details/<%= product.id %>" class="product_button">Details</a>
                                <button class="product_button_delete">Delete</button>
                            </form>
                        </div>
                    <% } %>
                </div>
            <% } else { %>
                <div class="products-title">
                    <h1>No product in the card</h1>
                </div>
            <% } %>
            
        </section>

        <section class="card-totalprice-section">
            <div class="card-total-price-text">
                <h1 class="card-total-price--h1">
                    Total Price : <%= Card.totalPrice %> AZN
                </h1>
            </div>
        </section>
    </main>


</body>
</html>