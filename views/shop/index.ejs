<%- include('../includes/head.ejs') %>

<link rel="stylesheet" href="/css/products.css">
</head>


<body>

    <%- include('../includes/navigation.ejs') %>

    <main>
        <section class="products-section">
            <% if (products.length > 0) { %>
                <div class="products-title">
                    <h1>My Products</h1>
                </div>
    
                <div class="products-div">
                    <% for(product of products){ %>
                        <div class="product-card">
                            <div class="product-title">
                                <h1 class="product_title"><%= product.title %></h1>
                            </div>
                            <div class="product__img">
                                <div class="product-img">
                                    <img src="<%= product.image_link %>" alt="product" class="product_img">
                                </div>
                            </div>
                            <div class="product-text">
                                <p class="product_text"><%= product.description %></p>
                            </div>
                            <form class="product-button" method="post" action="/add-to-card">
                                <input type="hidden" name="productId" value="<%= product.id %>">
                                <button class="product_button pr_button" type="submit">Add to card</button>
                                <a href="/products/details/<%= product.id %>" class="product_button">Details</a>
                            </form>
                        </div>
                    <% } %>
                </div>
            <% } else { %>
                <div class="products-title">
                    <h1>No Product</h1>
                </div>
            <% } %>
            
        </section>
    </main>
   

</body>
</html>